{
    "name": "vscode-filesystemtoolbox",
    "displayName": "File System Toolbox",
    "description": "Collection of tools to work with the File System",
    "version": "0.6.0",
    "engines": {
        "vscode": "^1.45.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "Assets/tech-service.png",
    "preview": true,
    "publisher": "carlocardella",
    "author": {
        "name": "Carlo Cardella",
        "url": "https://cloudnotes.io"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/carlocardella/vscode-FileSystemToolbox.git"
    },
    "bugs": {
        "url": "https://github.com/carlocardella/vscode-FileSystemToolbox/issues"
    },
    "license": "MIT",
    "keywords": [
        "tools",
        "utility",
        "FileSystem",
        "files",
        "folders",
        "path autocompleter",
        "path intellisense"
    ],
    "activationEvents": [
        "*"
    ],
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": true
        }
    },
    "main": "./dist/extension",
    "contributes": {
        "commands": [
            {
                "command": "copyFilePath",
                "title": "FST: Copy active file path",
                "enablement": "editorIsOpen"
            },
            {
                "command": "vscode-FileSystemToolbox.CopyFileName",
                "title": "FST: Copy active file name",
                "enablement": "editorIsOpen"
            },
            {
                "command": "vscode-FileSystemToolbox.CopyRelativeFilePath",
                "title": "FST: Copy relative file path",
                "enablement": "editorIsOpen"
            },
            {
                "command": "vscode-FileSystemToolbox.CopyFileNameWithoutExtension",
                "title": "FST: Copy active file name without extension",
                "enablement": "editorIsOpen"
            },
            {
                "command": "vscode-FileSystemToolbox.CopyFilePathWithLineNumber",
                "title": "FST: Copy active file path with line number",
                "enablement": "editorIsOpen"
            },
            {
                "command": "vscode-FileSystemToolbox.CopyFileNameWithLineNumber",
                "title": "FST: Copy active file name with line number",
                "enablement": "editorIsOpen"
            },
            {
                "command": "vscode-FileSystemToolbox.CopyWorkspaceRootPath",
                "title": "FST: Copy Workspace root path",
                "enablement": "editorIsOpen"
            },
            {
                "command": "vscode-FileSystemToolbox.CopyFolderPath",
                "title": "FST: Copy folder path",
                "enablement": "editorIsOpen"
            },
            {
                "command": "vscode-FileSystemToolbox.CopyRelativeFolderPath",
                "title": "FST: Copy relative folder path",
                "enablement": "editorIsOpen"
            },
            {
                "command": "vscode-FileSystemToolbox.DuplicateFile",
                "title": "FST: Duplicate file",
                "enablement": "editorIsOpen"
            },
            {
                "command": "vscode-FileSystemToolbox.RemoveFile",
                "title": "FST: Remove file",
                "enablement": "editorIsOpen"
            },
            {
                "command": "vscode-FileSystemToolbox.CopyRelativeFilePathWithLineNumber",
                "title": "FST: Copy relative file path with line number",
                "enablement": "editorIsOpen"
            },
            {
                "command": "vscode-FileSystemToolbox.CopySelectionWithMetadata",
                "title": "FST: Copy Selection With Metadata",
                "enablement": "editorIsOpen"
            },
            {
                "command": "vscode-FileSystemToolbox.TransformPathToPosix",
                "title": "FST: Transform path to Posix",
                "enablement": "editorHasSelection"
            },
            {
                "command": "vscode-FileSystemToolbox.TransformPathToWin32",
                "title": "FST: Transform path to Win32",
                "enablement": "editorHasSelection"
            },
            {
                "command": "vscode-FileSystemToolbox.NewFileRelativeToCurrentFile",
                "title": "FST: New file relative to current file"
            },
            {
                "command": "vscode-FileSystemToolbox.NewFileRelativeToWorkspaceRoot",
                "title": "FST: New file relative to workspace root"
            },
            {
                "command": "vscode-FileSystemToolbox.test",
                "title": "FST: test"
            },
            {
                "command": "vscode-FileSystemToolbox.OpenFileUnderCursor",
                "title": "FST: Open file under cursor"
            },
            {
                "command": "vscode-FileSystemToolbox.NormalizePath",
                "title": "FST: Normalize path"
            }
        ],
        "menus": {
            "menuBar/edit/copy": [
                {
                    "submenu": "fst.editorContext",
                    "group": "File System Toolbox"
                }
            ],
            "editor/title/context": [
                {
                    "submenu": "fst.editorContext",
                    "group": "File System Toolbox"
                }
            ],
            "editor/context": [
                {
                    "submenu": "fst.editorContext",
                    "group": "File System Toolbox"
                }
            ],
            "fst.editorContext": [
                {
                    "submenu": "fst.copy",
                    "group": "Copy"
                },
                {
                    "submenu": "fst.new",
                    "group": "Create"
                },
                {
                    "submenu": "fst.remove",
                    "group": "Remove"
                },
                {
                    "submenu": "fst.transform",
                    "group": "Transform"
                },
                {
                    "command": "vscode-FileSystemToolbox.OpenFileUnderCursor"
                }
            ],
            "fst.copy": [
                {
                    "command": "vscode-FileSystemToolbox.CopyFileName",
                    "group": "fst.copy"
                },
                {
                    "command": "vscode-FileSystemToolbox.CopyFileNameWithoutExtension",
                    "group": "fst.copy"
                },
                {
                    "command": "vscode-FileSystemToolbox.CopyFilePathWithLineNumber",
                    "group": "fst.copy"
                },
                {
                    "command": "vscode-FileSystemToolbox.CopyFileNameWithLineNumber",
                    "group": "fst.copy"
                },
                {
                    "command": "vscode-FileSystemToolbox.CopyRelativeFilePath",
                    "group": "fst.copy"
                },
                {
                    "command": "vscode-FileSystemToolbox.CopyRelativeFilePathWithLineNumber",
                    "group": "fst.copy"
                },
                {
                    "command": "vscode-FileSystemToolbox.CopySelectionWithMetadata",
                    "group": "fst.copy"
                },
                {
                    "command": "vscode-FileSystemToolbox.CopyFolderPath",
                    "group": "fst.copy"
                },
                {
                    "command": "vscode-FileSystemToolbox.CopyRelativeFolderPath",
                    "group": "fst.copy"
                },
                {
                    "command": "vscode-FileSystemToolbox.CopyWorkspaceRootPath",
                    "group": "fst.copy"
                }
            ],
            "fst.new": [
                {
                    "command": "vscode-FileSystemToolbox.NewFileRelativeToCurrentFile",
                    "group": "fst.new"
                },
                {
                    "command": "vscode-FileSystemToolbox.NewFileRelativeToWorkspaceRoot",
                    "group": "fst.new"
                }
            ],
            "fst.remove": [
                {
                    "command": "vscode-FileSystemToolbox.RemoveFile",
                    "group": "fst.remove"
                }
            ],
            "fst.transform": [
                {
                    "command": "vscode-FileSystemToolbox.TransformPathToPosix",
                    "group": "fst.transform"
                },
                {
                    "command": "vscode-FileSystemToolbox.TransformPathToWin32",
                    "group": "fst.transform"
                },
                {
                    "command": "vscode-FileSystemToolbox.NormalizePath",
                    "group": "fst.transform"
                }
            ]
        },
        "submenus": [
            {
                "id": "fst.editorContext",
                "label": "File System Toolbox"
            },
            {
                "id": "fst.copy",
                "label": "Copy"
            },
            {
                "id": "fst.new",
                "label": "Create"
            },
            {
                "id": "fst.remove",
                "label": "Remove"
            },
            {
                "id": "fst.transform",
                "label": "Transform"
            }
        ],
        "configuration": [
            {
                "title": "File System Toolbox",
                "properties": {
                    "fst.CopyMetadataPathType": {
                        "type": "string",
                        "description": "The type of path to use when copying a selection with metadata",
                        "enum": [
                            "fullPath",
                            "fileName",
                            "relativePath"
                        ],
                        "default": "fullPath"
                    },
                    "fst.MetadataPathPosition": {
                        "description": "The position where show the metadata info, relative to the selection content",
                        "type": "string",
                        "enum": [
                            "above",
                            "below"
                        ],
                        "default": "below"
                    },
                    "fst.CopyMetadataLineNumbers": {
                        "description": "Copy the line numbers with the text selection and metadata",
                        "type": "boolean",
                        "default": true
                    },
                    "fst.CopyMetadataSelectionRange": {
                        "description": "Copy the selection range along with the selection metadata",
                        "type": "boolean",
                        "default": true
                    },
                    "fst.MetadataCopyLineNumbers": {
                        "description": "Copy the original line numbers along with the text selection",
                        "type": "boolean",
                        "default": true
                    },
                    "fst.EnablePathCompleter": {
                        "description": "Enable the path autocomplete feature",
                        "type": "boolean",
                        "default": true
                    },
                    "fst.PathCompleterAppendPathSeparator": {
                        "description": "Append the path separator to folders, of \"EnablePAthCompleter\" is `true`. If `PathCompleterAppendPathSeparator` is `true` and if the folder is not empty, the next path element will be presented as autocompletion.",
                        "type": "boolean",
                        "default": true
                    },
                    "fst.PathCompleterSeparator": {
                        "description": "The separator character to use with path completion",
                        "type": "string",
                        "enum": [
                            "SystemDefault",
                            "\\",
                            "/"
                        ],
                        "default": "SystemDefault"
                    },
                    "fst.PathCompleterTriggerOutsideQuotes": {
                        "description": "Trigger path autocompletion even if the path is outside quotes",
                        "type": "boolean",
                        "default": true
                    },
                    "fst.PathCompleterExpandHomeDirAlias": {
                        "description": "Expand the home directory alias to the user home directory",
                        "type": "boolean",
                        "default": false
                    }
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "test-compile": "tsc -p ./",
        "unit-tests": "tsc -w -p ./"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.45.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "eslint": "^7.19.0",
        "glob": "^7.1.6",
        "mocha": "^8.2.1",
        "mocha-explorer-launcher-scripts": "^0.3.0",
        "nyc": "^15.1.0",
        "source-map-support": "^0.5.19",
        "ts-loader": "^8.2.0",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3",
        "vscode-test": "^1.5.0",
        "webpack": "^5.36.2",
        "webpack-cli": "^4.7.0",
        "webpack-dev": "^1.1.1"
    },
    "dependencies": {
        "fs": "^0.0.1-security"
    }
}

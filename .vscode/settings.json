// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false // set this to true to hide the "out" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true // set this to false to include "out" folder in search results
    },
    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off",
    "favorites.sortDirection": "ASC",
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#739fc3",
        "activityBar.activeBorder": "#9c4374",
        "activityBar.background": "#739fc3",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#9c4374",
        "activityBarBadge.foreground": "#e7e7e7",
        "statusBar.background": "#4f87b4",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#739fc3",
        "titleBar.activeBackground": "#4f87b4",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#4f87b499",
        "titleBar.inactiveForeground": "#e7e7e799",
        "tab.activeBorder": "#739fc3"
    },
    "peacock.color": "#4F87B4",
    "mochaExplorer.files": "src/test/**/*test.ts",
    "mochaExplorer.logpanel": true,
    "mochaExplorer.require": "ts-node/register",
    "mochaExplorer.esmLoader": false
}
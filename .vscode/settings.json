// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false // set this to true to hide the "out" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true // set this to false to include "out" folder in search results
    },
    // Turn off tsc task auto detection since we have the necessary tasks as npm scripts
    "typescript.tsc.autoDetect": "off",
    "favorites.sortDirection": "ASC",
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#457ca4",
        "activityBar.activeBorder": "#702f55",
        "activityBar.background": "#457ca4",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#702f55",
        "activityBarBadge.foreground": "#e7e7e7",
        "titleBar.activeBackground": "#366180",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#36618099",
        "titleBar.inactiveForeground": "#e7e7e799",
        "tab.activeBorder": "#457ca4",
        "sash.hoverBorder": "#457ca4",
        "statusBar.background": "#366180",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#457ca4",
        "statusBarItem.remoteBackground": "#366180",
        "statusBarItem.remoteForeground": "#e7e7e7",
        "commandCenter.border": "#e7e7e799"
    },
    "peacock.color": "#366180",
    "mochaExplorer.files": "src/test/**/*test.ts",
    "mochaExplorer.logpanel": true,
    "mochaExplorer.require": "ts-node/register",
    "mochaExplorer.esmLoader": false,
    "cSpell.words": [
        "Autocompleter",
        "USERPROFILE",
        "carlocardella",
        "filesystemtoolbox",
        "submenu",
        "submenus"
    ],
    "task.allowAutomaticTasks": "on"
}
